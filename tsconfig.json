{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["expo-env.d.ts", ".expo/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "dist"]
}
